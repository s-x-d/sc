container_commands:
  01_create_media_dir:
    command: "mkdir -p /var/app/current/media && chmod 755 /var/app/current/media"

  02_create_nginx_conf:
    command: |
      echo 'location /media/ {
        alias /var/app/current/media/;
        expires 30d;
      }' > /etc/nginx/conf.d/elasticbeanstalk/media.conf

files:
  "/etc/nginx/conf.d/elasticbeanstalk/test_write.conf":
    mode: "000644"
    owner: root
    group: admin