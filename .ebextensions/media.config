files:
  "/etc/nginx/conf.d/media.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location /media/ {
        alias /var/app/current/media/;
        autoindex on;
      }

# Add to your .ebextensions/media.config
commands:
  01_debug_config:
    command: "ls -la /etc/nginx/conf.d/ > /tmp/nginx_debug.log"