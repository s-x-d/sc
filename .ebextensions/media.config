files:
  "/etc/nginx/conf.d/media.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location /media/ {
        alias /var/app/current/media/;
        autoindex on;
      }

  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream gunicorn {
        server 0.0.0.0:8000;
      }

      server {
        listen 80;

        location /media/ {
          alias /var/app/current/media/;
          autoindex on;
        }

        location / {
          proxy_pass http://gunicorn;
          proxy_set_header Host $host;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header X-Forwarded-Proto $scheme;
        }
      }

container_commands:
  01_restart_nginx:
    command: "sudo systemctl restart nginx || sudo service nginx restart"