files:
  "/etc/nginx/conf.d/media.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
        location /media/ {
          alias /var/app/current/media/;
          autoindex on;
        }
      }
commands:
  01_verify_media_written:
    command: "cat /etc/nginx/conf.d/media.conf >> /var/log/media_debug.log"
  02_restart_nginx:
    command: "sudo systemctl restart nginx"