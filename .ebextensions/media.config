files:
  "/etc/nginx/conf.d/media.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # Media files configuration - no server block here
      location /media/ {
        alias /var/app/current/media/;
        autoindex on;
      }

  "/etc/nginx/conf.d/proxy.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      upstream gunicorn {
        server 127.0.0.1:8000;
      }

      server {
        listen 80;

        # Include our media location configuration
        include /etc/nginx/conf.d/media.conf;

        location / {
          proxy_pass http://gunicorn;
          proxy_set_header Host $host;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header X-Forwarded-Proto $scheme;
        }
      }

commands:
  01_verify_media_written:
    command: "cat /etc/nginx/conf.d/media.conf >> /var/log/media_debug.log"